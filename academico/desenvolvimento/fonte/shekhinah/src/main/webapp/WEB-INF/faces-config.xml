<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=" http://java.sun.com/xml/ns/javaee
     					 http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>

		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>

		<resource-bundle>
			<base-name>messages</base-name>
			<var>msg</var>
		</resource-bundle>

	</application>

	<converter>
		<converter-for-class>java.lang.Enum</converter-for-class>
		<converter-class>javax.faces.convert.EnumConverter</converter-class>
	</converter>

	<!-- Perfil -->
	<navigation-rule>
		<from-view-id>/paginas/perfil/lista.xhtml</from-view-id>
		<!-- FIXME: passar a url direto no link com ?redirect-true -->
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/paginas/perfil/pesquisa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cadastro</from-outcome>
			<to-view-id>/paginas/perfil/cadastro.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/paginas/perfil/pesquisa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>pesquisa</from-outcome>
			<to-view-id>/paginas/perfil/cadastro.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<!-- Aluno -->
	<navigation-rule>
		<from-view-id>/paginas/aluno/pesquisa.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>cadastro</from-outcome>
			<to-view-id>/paginas/aluno/cadastro.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/paginas/aluno/cadastro.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>pesquisa</from-outcome>
			<to-view-id>/paginas/aluno/pesquisa.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>


</faces-config>
